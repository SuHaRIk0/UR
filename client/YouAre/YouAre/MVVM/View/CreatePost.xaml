<UserControl x:Class="YouAre.MVVM.View.CreatePostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="300" Width="400">

    <Grid Margin="101,0,0,0">
        <StackPanel Margin="10">
            <TextBlock Text="Новий пост" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Введіть текст поста:"/>
            <TextBox Text="{Binding PostText}" Height="80" Margin="0,0,0,10"/>

            <Button Content="Вибрати файл" Command="{Binding ChooseFileCommand}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding SelectedFilePath}" Foreground="Gray" Margin="0,0,0,10" />

            <Button Content="Створити пост" Command="{Binding CreatePostCommand}" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
